{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "assets/*": ["./assets/*"],
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "screens/*": ["./src/screens/*"],
      "services/*": ["./src/services/*"],
      "styles/*": ["./src/styles/*"],
      "utils/*": ["./src/utils/*"]
    },
    "strictNullChecks": true
  },
  "include": ["*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
